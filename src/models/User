"use strict"

var mongoose = require("mongoose");

var Schema = mongoose.Schema;
var userSchema = new Schema({
    
    fullname: {
        type: String,
    required: [true, "You have to provide a name for the user"]
    },
    
    emailadress: {
        type: String,
    required: [true, "You have to provide an email adress"],
      unique: true
    },
    
    password: {
        type: String,
    required: true
    }
    
    
});





